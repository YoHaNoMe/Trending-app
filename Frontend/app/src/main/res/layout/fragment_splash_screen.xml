<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".myfragments.SplashScreenFragment">

    <View
        android:id="@+id/splash_screen_light_background"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:background="@drawable/splash_screen_background"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/splash_screen_trending_text_view"
        app:layout_constraintLeft_toLeftOf="@id/splash_screen_logo_icon_image_view"
        app:layout_constraintRight_toRightOf="@id/splash_screen_logo_icon_image_view"
        app:layout_constraintTop_toTopOf="@id/splash_screen_logo_icon_image_view"
        app:layout_constraintVertical_bias="0.5" />


    <ImageView
        android:id="@+id/splash_screen_logo_icon_image_view"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/ic_local_fire_department_black_18dp"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32999998" />

    <TextView
        android:id="@+id/splash_screen_trending_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal"
        android:text="@string/trending_title"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="@id/splash_screen_logo_icon_image_view"
        app:layout_constraintRight_toRightOf="@id/splash_screen_logo_icon_image_view"
        app:layout_constraintTop_toTopOf="@id/splash_screen_logo_icon_image_view" />

</androidx.constraintlayout.widget.ConstraintLayout>