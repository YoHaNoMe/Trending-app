<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:id="@+id/register_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="128dp"
        android:background="@drawable/user_profile_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <include layout="@layout/register_content" />

    </ScrollView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/register_user_profileImage_imageView"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@color/colorPrimary"
        app:civ_border_color="@color/colorAccent"
        app:civ_border_width="4dp"
        app:layout_constraintBottom_toTopOf="@id/register_scrollView"
        app:layout_constraintEnd_toEndOf="@id/register_scrollView"
        app:layout_constraintStart_toStartOf="@id/register_scrollView"
        app:layout_constraintTop_toTopOf="@id/register_scrollView" />

    <TextView
        android:id="@+id/register_user_add_photo_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Photo"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="@id/register_user_profileImage_imageView"
        app:layout_constraintEnd_toEndOf="@id/register_user_profileImage_imageView"
        app:layout_constraintStart_toStartOf="@id/register_user_profileImage_imageView"
        app:layout_constraintTop_toTopOf="@id/register_user_profileImage_imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>

